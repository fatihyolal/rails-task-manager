<h1> TASKS LIST</h1>


<%@tasks.each do |task| %>
<ol>
<li><%= link_to task.title, task_path(task) %>
<p> Details: <%= task.details %> </p>
<% if task.completed %>
  <p> Task is <em> completed! </em> </p>
 <% else %>
  <p> Task is <strong> not completed! </strong> </p>
 <% end %>
</li>
</ol>
<%end%>
